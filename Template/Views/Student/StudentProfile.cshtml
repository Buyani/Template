@model Template.Model.StudentModels.StudentViewModel

@{
    ViewData["Title"] = "StudentProfile";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="panel-body">
    <div class="main-content">
        <div class="container-fluid">
            <div class="panel panel-profile">
                <div class="clearfix">
                    <div class="profile-left">
                        <div class="profile-header">
                            <div class="overlay"></div>
                            <div class="profile-main">
                                <h3 class="name">@Model.FirstName</h3>
                                <span class="online-status status-available">Active</span>
                            </div>
                        </div>



                        <div class="profile-detail">
                            <div class="profile-info">
                                <h4 class="heading">Student Info</h4>
                                <ul class="list-unstyled list-justify">
                                    <li>Identity <span>@Model.Identity</span></li>
                                    <li>Mobile <span>@Model.CellNumber</span></li>
                                    <li>Email <span>@Model.Email</span></li>
                                </ul>
                            </div>
                            <div class="profile-info">
                                <h4 class="heading">Former School</h4>
                                <ul class="list-unstyled list-justify">
                                    <li>Name <span>@Model.School.Name</span></li>
                                    <li>Center <span>@Model.School.Center</span></li>
                                    <li>Contact Number <span>@Model.School.ContactNumber</span></li>
                                </ul>
                            </div>
                            <div class="profile-info card">
                                <h4 class="heading">Guardian Info</h4>
                                <ul class="list-unstyled list-justify">
                                    <li>Name <span>@Model.Parent.FirstName</span></li>
                                    <li>Surname <span>@Model.Parent.LastName</span></li>
                                    <li>Relationship <span>@Model.Parent.Relationship</span></li>
                                    <li>Contact Number <span>@Model.Parent.CellPhone</a></span></li>
                                </ul>
                            </div>
                        </div>
                        <!-- END PROFILE DETAIL -->
                    </div>
                    <!-- END LEFT COLUMN -->
                    <!-- RIGHT COLUMN -->
                    <div class="profile-right">
                        <h4 class="heading">Student Payments</h4>
                        <!-- AWARDS -->
                        <div class="awards">
                            <div class="row">
                                <div class="panel-body no-padding">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Month</th>
                                                <th>Amount</th>
                                                <th>Date Created</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Payments)
                                            {

                                                <tr>
                                                    <td>@item.Month</td>
                                                    <td>@item.Amount</td>
                                                    <td>@item.DateCreated</td>
                                                    <td><span class="label label-success">Approved</span></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="text-center"><a href="@Url.Action("Create","Payment",new {Identity=Model.Identity })" class="btn btn-primary btn-lg">New Payment</a></div>
                        </div>
                        <div class="custom-tabs-line tabs-line-bottom left-aligned">
                            <ul class="nav" role="tablist">
                                <li class="active"><a href="#tab-bottom-left1" role="tab" data-toggle="tab">Students Subjects</a></li>
                            </ul>
                        </div>
                        <div class="tab-content">

                            <div class="table-responsive">
                                <table class="table project-table">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Enrollements)
                                        {

                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.Name</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   </div>


