@model IEnumerable<Template.Model.PaymentModels.PaymentViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="panel-body">
    <div class="row">
        <div class="panel">
            <h3 class="panel-title">Student List</h3>
            <div class="panel-heading">

                @using (Html.BeginForm())
                {
                    <div class="row">
                        <div class="form-group row">
                            <div class="col-sm-2"><b>Search</b></div>
                            <div class="col-sm-4">@Html.TextBox("Search_Data", ViewBag.FilterValue as string, new { @class = "form-control col-sm-3" })</div>
                            <div class="col-sm-4"> <input type="submit" value="Search Payment" class="btn btn-info" />  </div>
                        </div>

                    </div>
                }
                <div class="right">
                    <button type="button" class="btn-toggle-collapse"><i class="lnr lnr-chevron-up"></i></button>
                    <button type="button" class="btn-remove"><i class="lnr lnr-cross"></i></button>
                </div>
            </div>
            <div class="panel-body no-padding">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Identity</th>
                            <th>Month</th>
                            <th>Payment Type</th>
                            <th>Amount</th>
                            <th>Date Created</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.Identity</td>
                                <td>@item.Month</td>
                                <td>@item.Type</td>
                                <td>@item.Amount</td>
                                <td>@item.DateCreated</td>
                                <td><span class="label label-success">Approved</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-6 text-right"><a asp-action="Create" class="btn btn-success">Add New Payment</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
